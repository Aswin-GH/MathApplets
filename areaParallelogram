            background-color: #f0f0f0;
        }

        .title {
            font-size: 24px;
            font-weight: bold;
            margin: 20px 0;
            text-align: center;
        }

        .coordinate-plane {
            position: relative;
            width: 90%;
            max-width: 800px; /* Set max width for larger screens */
            aspect-ratio: 4 / 3; /* Maintain 4:3 aspect ratio */
            background-color: white;
            border: 2px dashed Coral;
            margin-bottom: 20px;
        }

        .controls-section{
            width: 90%;
            max-width: 800px;
            background-color: Snow;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 2%;
        }
        
        .move-section {
            border-radius: 25px;
            width: 90%;
            max-width: 800px;
            background-color: GhostWhite;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            margin-bottom: 10px;
        }

        .control {
            display: flex;
            align-items: center;
